<div class="ui three column centered grid">
  <form class="ui form">
    <div class="field">
      <label>New Cohort Form</label>
      <%= form_with model: Course.new do |form| %>
    </div>
    
    <div class="field">
      <%= form.text_field :name, placeholder: "Name"%>
    </div>
    
    <div class="field">
      <%= form.text_field :hours, placeholder: "Hours"%>
    </div>
    
    <div class="field">
      <%= form.submit class: "ui inverted button"%>
    </div>  
      <% end %>
    </div>
  </div>
</div>
