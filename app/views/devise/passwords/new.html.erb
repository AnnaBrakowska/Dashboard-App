<div class="ui three column centered grid">
  <div class="ui form" style="position:relative; top:100px" >
    <div class="ui top attached label">Forgot your password?</div>
    <br><br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Reset password", :class=>"ui inverted orange button"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>


</div>
</div>
</div>